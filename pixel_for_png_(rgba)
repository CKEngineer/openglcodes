from PIL import Image

# Open an image file FOR PNG
image_path = 'pusula_jpeg.jpg'# must be PNG
image = Image.open(image_path)

# Get the RGB values of each pixel
rgb_values = list(image.getdata())
dosya = open('metin_dosyasi.txt', 'w')
counter = 0

rgba_values = [((r, g, b, a) if image.mode == 'RGBA' else (r, g, b))
               for r, g, b, a in rgb_values

for pixel in rgba_values:
    dosya.write(f"{round((pixel[0]*0.2126 + pixel[1]*0.7152 +pixel[2] * 0.0722))},")
dosya.close()
 
